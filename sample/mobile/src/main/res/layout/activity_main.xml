<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.akaita.android.circularseekbar.sample.MainActivity">

    <com.akaita.android.circularseekbar.CircularSeekBar
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:enabled="true"
        app:showIndicator="true"
        app:min="10"
        app:max="20"
        app:speedMultiplier="1"
        app:progress="15"
        app:showProgressText="true"
        app:ringWidth="0.5"
        app:showInnerCircle="true"
        app:ringColor="@color/colorPrimary"
        app:innerCircleColor="@color/colorAccent"
        app:progressTextColor="@color/colorPrimaryDark"
        app:progressTextSize="30"
        />
        <!-- app:progressText="xxx" -->

</android.support.constraint.ConstraintLayout>
